{
	"name": "ssr-engine",
	"version": "0.0.0",
	"description": "This is a simple server side rendering engine for ReactJS",
	"main": "index.js",
	"author": "jtnovellis <jtnovellis88@gmail.com>",
	"license": "MIT",
	"scripts": {
		"build-server": "webpack --config webpack.config.js",
		"build-client": "webpack --config webpack.config.client.js",
		"build-dev": "NODE_ENV=development npm run build-server && node --inspect dist/index.js",
		"dev": "nodemon --ext ts --exec \"npm run build-dev\"",
		"build": "NODE_ENV=production npm run build-server && NODE_ENV=production npm run build-client",
		"start": "NODE_ENV=production npm run build && NODE_ENV=production node dist/index.js"
	},
	"devDependencies": {
		"@swc/cli": "0.1.62",
		"@swc/core": "1.3.40",
		"@types/express": "4.17.17",
		"@types/node": "18.15.2",
		"@types/react": "18.0.28",
		"@types/react-dom": "18.0.11",
		"@types/styled-components": "^5.1.26",
		"@typescript-eslint/eslint-plugin": "5.55.0",
		"@typescript-eslint/parser": "5.55.0",
		"eslint": "8.0.1",
		"eslint-config-standard-with-typescript": "34.0.0",
		"eslint-plugin-react": "7.32.2",
		"nodemon": "2.0.21",
		"swc-loader": "0.2.3",
		"typescript": "*",
		"webpack": "5.76.1",
		"webpack-cli": "5.0.1",
		"webpack-dev-server": "4.11.1",
		"webpack-node-externals": "3.0.0"
	},
	"dependencies": {
		"dotenv": "16.0.3",
		"express": "4.18.2",
		"react": "18.2.0",
		"react-dom": "18.2.0",
		"react-router-dom": "6.9.0",
		"styled-components": "^5.3.9"
	}
}
